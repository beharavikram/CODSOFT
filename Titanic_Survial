# Function to generate and print number pyramid pattern
def number_pyramid(height):
    for i in range(1, height + 1):
        # Print leading spaces
        for j in range(height - i):
            print(" ", end="")
        # Print numbers
        for k in range(i):
            print(i, end=" ")
        # Move to the next line
        print()

# Define the height of the pyramid
height = 5

# Generate and print the number pyramid
number_pyramid(height)
